<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/crView_car"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardBackgroundColor="@color/gray"
        app:cardCornerRadius="24dp"
        app:cardElevation="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cnst_car_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_car"
                android:layout_width="361dp"
                android:layout_height="161dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/eletric_car_2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_preço"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="Preço"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/img_car" />

            <TextView
                android:id="@+id/txt_bateria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="Bateria"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_preço" />

            <TextView
                android:id="@+id/txt_potencia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="Potencia"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_bateria" />

            <TextView
                android:id="@+id/txt_recarga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="Recarga"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_potencia" />

            <TextView
                android:id="@+id/txt_valor_preço"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="180dp"
                android:text="R$: 4300.00"
                app:layout_constraintStart_toEndOf="@id/txt_preço"
                android:layout_marginStart="50dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/img_car" />

            <TextView
                android:id="@+id/txt_valor_bateria"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="180dp"
                android:text="93,4 kWh"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/txt_valor_preço"
                app:layout_constraintTop_toBottomOf="@id/txt_valor_preço" />

            <TextView
                android:id="@+id/txt_valor_potencia"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="180dp"
                android:text="646 cv"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/txt_valor_bateria"
                app:layout_constraintTop_toBottomOf="@id/txt_valor_bateria" />

            <TextView
                android:id="@+id/txt_valor_recarga"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="180dp"
                android:text="23 min"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/txt_valor_potencia"
                app:layout_constraintTop_toBottomOf="@id/txt_valor_potencia" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>