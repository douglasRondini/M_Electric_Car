<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="Electric Car"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/txt_Car"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="16dp"
        android:text="Carros"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_title" />

    <TextView
        android:id="@+id/txt_favoritos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Favoritos"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txt_Car"
        app:layout_constraintTop_toTopOf="@+id/txt_Car" />


    <androidx.cardview.widget.CardView
        android:id="@+id/crView_car"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardBackgroundColor="@color/gray"
        app:cardCornerRadius="24dp"
        app:cardElevation="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_Car">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cnst_car_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:id="@+id/img_car"
                android:layout_width="361dp"
                android:layout_height="161dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/eletric_car_2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                 />

            <TextView
                android:id="@+id/txt_preço"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:text="Preço"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/img_car" />

            <TextView
                android:id="@+id/txt_bateria"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:text="Bateria"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_preço" />

            <TextView
                android:id="@+id/txt_potencia"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:text="Potencia"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_bateria" />

            <TextView
                android:id="@+id/txt_recarga"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:text="Recarga"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_potencia" />

            <TextView
                android:id="@+id/txt_valor_preço"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="180dp"
                android:text="R$: 4300.00"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/txt_preço"
                app:layout_constraintTop_toBottomOf="@id/img_car" />

            <TextView
                android:id="@+id/txt_valor_bateria"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="180dp"
                android:text="93,4 kWh"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/txt_bateria"
                app:layout_constraintTop_toBottomOf="@id/txt_valor_preço" />

            <TextView
                android:id="@+id/txt_valor_potencia"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="180dp"
                android:text="646 cv"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/txt_potencia"
                app:layout_constraintTop_toBottomOf="@id/txt_valor_bateria" />

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="180dp"
                android:text="23 min"
                app:layout_constraintBottom_toBottomOf="@+id/txt_recarga"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/txt_recarga"
                app:layout_constraintTop_toBottomOf="@id/txt_valor_potencia" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>





    <Button
        android:id="@+id/btn_calcular_autonomia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calcular Autonomia"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />




</androidx.constraintlayout.widget.ConstraintLayout>